CREATE TABLE MENU (
FOOD_ID NUMBER NOT NULL, 
PRIMARY KEY(FOOD_ID),
FOOD_NAME VARCHAR2(100) NOT NULL,
FOOD_CATEGORY CHAR(1) NOT NULL,
FOOD_CUISINE CHAR(1) NOT NULL,
FOOD_TYPE CHAR(2) NOT NULL,
CURRENT_PRICE NUMBER NOT NULL
);

CREATE TABLE PRICE_HISTORY (
FOOD_ID NUMBER NOT NULL,
PRICE NUMBER NOT NULL,
DATE_TIME DATE NOT NULL,
FOREIGN KEY (FOOD_ID) REFERENCES MENU(FOOD_ID)
);

CREATE TABLE ORDERS (
ORDER_NO NUMBER NOT NULL,
TABLE_NO NUMBER NOT NULL,
FOOD_ID NUMBER NOT NULL,
FOREIGN KEY (FOOD_ID) REFERENCES MENU(FOOD_ID),
QUANTITY NUMBER NOT NULL,
DATE_TIME DATE NOT NULL
);

DESC MENU;
DESC PRICE_HISTORY;
DESC ORDERS;
