CREATE OR REPLACE TRIGGER TR_PRICE_HISTORY 
AFTER UPDATE ON MENU
FOR EACH ROW
DECLARE 
  V_FOOD_ID NUMBER;
  V_PRICE NUMBER;
BEGIN   
  --V_FOOD_ID := FOOD_ID;
  --V_PRICE := CURRENT_PRICE;
  
  SELECT FOOD_ID INTO V_FOOD_ID FROM MENU;
  SELECT CURRENT_PRICE INTO V_PRICE FROM MENU;  
  
  INSERT INTO PRICE_HISTORY VALUES (V_FOOD_ID, V_PRICE, SYSDATE);
  --V_PRICE := :NEW.CURRENT_PRICE  - :OLD.CURRENT_PRICE;
  --DBMS_OUTPUT.PUT(V_PRICE);
   
END;
/
UPDATE MENU SET CURRENT_PRICE = 10 WHERE FOOD_ID = 1;
